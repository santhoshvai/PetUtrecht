<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Main activity theme. -->
    <style name="AppTheme.Home">

    </style>

    <!-- Detail activity theme. -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Contact">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@android:color/primary_text_light</item>
        <item name="colorControlActivated">@android:color/primary_text_light</item>
        <item name="colorControlHighlight">@android:color/darker_gray</item>
        <item name="android:textColorPrimary">@android:color/primary_text_dark</item>
        <item name="colorButtonNormal">@android:color/primary_text_light</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!--grid layout text styles-->
    <style name="left_column_bold" parent="TextAppearance.AppCompat.Subhead">
        <item name="layout_gravity">right</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="right_column_normal" parent="TextAppearance.AppCompat.Subhead">
        <item name="layout_gravity">fill_horizontal</item>
        <item name="android:layout_width">0dp</item>
    </style>

</resources>
